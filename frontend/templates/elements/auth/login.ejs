<div class="container" style="margin-top:30px" ng-controller="authLogin" ng-submit="login()">
    <div class="col-md-12">
        <div class="modal-dialog" style="margin-bottom:0">
            <div class="modal-content">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign In</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" ng-model="data.username" placeholder="Username/E-mail" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" ng-model="data.password" placeholder="Password" type="password">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input ng-model="data.remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-sm btn-success">Login</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
